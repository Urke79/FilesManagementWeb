@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <form action="/api/FileMetadata/SaveUploadedFile" id="myDropzone" class="dropzone">
        <div class="fallback">
            <input name="file" type="file" multiple />
        </div>
    </form>   
</div>

<div class="row">
    <div class="col-md-12">

        <table id="filesTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>Size</th>
                    <th>Date Uploaded</th>
                    <th>Expires</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>File Name</th>
                    <th>Size</th>
                    <th>Date Uploaded</th>
                    <th>Expires</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
        
    </div>
    
</div>


@section Scripts
{
    <link href="~/Scripts/DropZone/dropzone.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/dropzone")    
    @Styles.Render("~/bundles/dataTables/css")
    @Scripts.Render("~/bundles/dataTables")
    <script src="signalr/hubs" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/CustomCode/custom-code.js"></script>
}
